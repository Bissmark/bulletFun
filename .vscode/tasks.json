{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Configure the project with CMake in debug mode."
        },
        {
            "label": "compile debug",
            "type": "process",
            "command": "cmake",
            
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build the debug version of the project using CMake."
        },
        {
            "label": "build release",
            "type": "process",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Configure the project with CMake in release mode."
        },
        {
            "label": "compile release",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Release"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build the release version of the project using CMake."
        }
    ]
}
